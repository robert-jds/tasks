<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js"></script>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
    $(function() {
      $("ul").sortable({
        update: function(event, ui) {
          alert("ui.item:" + ui.item.index());
          alert("event.srcElement.tagName:" + event.srcElement.tagName);
          alert("event.srcElement.className:" + event.srcElement.className);
          alert("event.srcElement.getAttribute('id'):" + event.srcElement.getAttribute('id'));
        }
      });
    });
  </script>
</head>
<body>
  <div class="container">
    <%= render 'layouts/header' %>
    <section class="content">
    <% flash.each do |k, v| %>
      <div class="flash <%= k %>"><%= v %></div>
    <% end %>
      <%= yield %>
    </section>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </div>
</body>
</html>
