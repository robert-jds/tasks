<% if @user.errors.any? %>
  <div class="error">
    <h2>Sign up problem - there were
      <%= pluralize(@user.errors.count, "error") %> error in the form you
      filled out.</h2>
    <p>There were problems with the following fields:</p>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li> 
    <% end %>
    </ul>
  </div>
<% end %>
